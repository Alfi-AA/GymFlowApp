<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gym_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Profile"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage personal data &amp; stats"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tombol Settings (Hiasan sesuai desain) -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_glass_panel"
                android:padding="8dp"
                android:src="@drawable/ic_person"
                app:tint="#888888" />
        </RelativeLayout>

        <!-- 1. INFO USER CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/gym_surface"
            app:cardCornerRadius="24dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Avatar Box -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_glass_panel_medium"
                        android:padding="20dp"
                        android:src="@drawable/ic_person"
                        app:tint="#888888" />

                    <!-- Centang Hijau -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_verified"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProfileNim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="NIM: -"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <!-- Badge Kelas -->
                    <TextView
                        android:id="@+id/tvProfileClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_glass_panel"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="CLASS -"
                        android:textColor="#DDDDDD"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2. BMI CALCULATOR CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/gym_surface"
            app:cardCornerRadius="24dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Icon Kalkulator -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calculator"
                        app:tint="@color/gym_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="BMI Calculator"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!-- Input Tinggi & Berat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <!-- Input Tinggi -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="HEIGHT (CM)"
                            android:textColor="#888888"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_glass_panel_medium"
                            android:hint="170"
                            android:inputType="number"
                            android:paddingStart="16dp"
                            android:textColor="@color/white"
                            android:textColorHint="#B4B4B4"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Input Berat -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="WEIGHT (KG)"
                            android:textColor="#888888"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_glass_panel_medium"
                            android:hint="65"
                            android:inputType="numberDecimal"
                            android:paddingStart="16dp"
                            android:textColor="@color/white"
                            android:textColorHint="#B4B4B4"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tombol Hitung (Warna Hijau Neon) -->
                <Button
                    android:id="@+id/btnCalculateBmi"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="CALCULATE BMI"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/gym_primary"
                    app:cornerRadius="12dp"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"/>

                <!-- Hasil Skor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_glass_panel_large"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SCORE RESULT"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBmiResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--.-"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBmiStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="- -"
                        android:textColor="@color/gym_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. TARGET SETTING CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/gym_surface"
            app:cardCornerRadius="24dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Icon Flag -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_flag"
                        app:tint="@color/gym_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Target Setting"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="UPDATE TARGET WEIGHT (KG)"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etTargetWeight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_glass_panel_large"
                    android:hint="70"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="#B4B4B4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSaveTarget"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="SAVE TARGET"
                    android:textColor="@color/gym_text_secondary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/black"
                    app:cornerRadius="12dp"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    app:icon="@drawable/ic_save"
                    app:iconTint="@color/gym_text_secondary"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4. LOGOUT BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_glass_panel_large"
            android:text="LOGOUT"
            android:textColor="#FF5555"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_person"
            android:paddingStart="120dp"
            android:paddingEnd="120dp"
            app:drawableTint="#FF5555"/>
    </LinearLayout>

</ScrollView>