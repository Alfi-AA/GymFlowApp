<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gym_background"
    android:padding="24dp"
    tools:context=".LoginActivity">

    <!-- 1. Logo Section -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:tint="@color/gym_primary"
        android:background="@drawable/bg_logo"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvAppTitle"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GymFlow"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtitle"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue your progress today"
        android:textColor="@color/gym_text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvLabelEmail"
        android:layout_marginBottom="48dp"/>

    <!-- 2. Input Section -->

    <!-- Label Email -->
    <TextView
        android:id="@+id/tvLabelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        android:textColor="@color/gym_text_secondary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardEmail"
        android:layout_marginBottom="8dp"/>

    <!-- Input Email Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gym_input_bg"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@+id/tvLabelPassword"
        app:layout_constraintVertical_bias="0.5">
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="e.g. admin@gym.com"
            android:textColorHint="@color/gym_text_secondary"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_person"
            android:drawableTint="@color/gym_text_secondary"
            android:drawablePadding="8dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Label Password -->
    <TextView
        android:id="@+id/tvLabelPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textColor="@color/gym_text_secondary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardEmail"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <!-- Input Password Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gym_input_bg"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelPassword">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="••••••••"
            android:textColorHint="@color/gym_text_secondary"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_lock"
            android:drawableTint="@color/gym_text_secondary"
            android:drawablePadding="8dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- 3. Button Login -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start Workout →"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="@color/gym_primary"
        app:cornerRadius="12dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/cardPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer Version -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0 • By GymFlow Inc."
        android:textColor="@color/gym_text_secondary"
        android:textSize="12sp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>