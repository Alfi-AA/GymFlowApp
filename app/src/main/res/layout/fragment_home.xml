<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gym_background"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1. HEADER SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcomeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo, Alex!"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Container Target BW -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <!-- Icon Scale (Ukuran diatur manual disini, misal 16dp) -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_scale"
                        app:tint="@color/gym_primary"
                        android:layout_marginEnd="6dp"/>

                    <!-- Teks Target (Sudah Bahasa Inggris) -->
                    <TextView
                        android:id="@+id/tvTargetWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target BW: 75 kg"
                        android:textColor="@color/gym_text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Icon Notifikasi / Profile Kecil (Hiasan) -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/bg_glass_panel"
                android:padding="8dp"
                app:tint="@color/gym_primary"/>
        </LinearLayout>

        <!-- 2. CARD RINGKASAN AKTIVITAS -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gym_surface"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="24dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Icon Bar Graph / Chart -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_graph"
                    app:tint="@color/gym_primary"
                    android:background="@drawable/bg_glass_panel"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVITY SUMMARY"
                        android:textColor="@color/gym_text_secondary"
                        android:textSize="10sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Set Today: "
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvTotalSetCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/gym_primary"
                            android:textSize="22sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. CARD INPUT LATIHAN -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gym_surface"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_pencil"
                        app:tint="@color/gym_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log New Set"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Chip Active -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip_active"
                        android:backgroundTint="@color/gym_primary"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="ACTIVE"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Input: Spinner Latihan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT EXERCISE"
                    android:textColor="@color/gym_text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerExercise"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_spinner_custom"
                    android:layout_marginBottom="16dp"/>

                <!-- Input Row: Beban & Reps -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="24dp">

                    <!-- Kolom Beban -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WEIGHT"
                            android:textColor="@color/gym_text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/gym_input_bg"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="0dp">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/etWeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="0"
                                    android:textColorHint="@color/gym_text_secondary"
                                    android:textColor="@color/white"
                                    android:inputType="number"
                                    android:paddingStart="16dp"
                                    android:paddingTop="16dp"
                                    android:paddingBottom="16dp"
                                    android:paddingEnd="48dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KG"
                                    android:textColor="@color/gym_text_secondary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="end|center_vertical"
                                    android:layout_marginEnd="16dp"/>
                            </FrameLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Kolom Reps -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REPS"
                            android:textColor="@color/gym_text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/gym_input_bg"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="0dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/etReps"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="0"
                                    android:textColorHint="@color/gym_text_secondary"
                                    android:textColor="@color/white"
                                    android:inputType="number"
                                    android:paddingStart="16dp"
                                    android:paddingTop="16dp"
                                    android:paddingBottom="16dp"
                                    android:paddingEnd="56dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="REPS"
                                    android:textColor="@color/gym_text_secondary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="end|center_vertical"
                                    android:layout_marginEnd="16dp"/>
                            </FrameLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>

                <!-- Button Save -->
                <Button
                    android:id="@+id/btnSaveRecord"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save Record"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/gym_primary"
                    app:cornerRadius="12dp"

                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@color/black"

                    android:elevation="12dp"
                    android:outlineProvider="background"
                    android:outlineSpotShadowColor="@color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4. FOOTER: TIMER & KCAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="80dp"
            android:baselineAligned="false">

            <!-- CARD TIMER -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/gym_surface"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1AFFFFFF"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Icon Timer -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#4A90E2"
                        android:background="@drawable/bg_logo_circle"
                        android:backgroundTint="#1A4A90E2"
                        android:padding="6dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01:30"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rest Timer"
                        android:textColor="@color/gym_text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD KCAL -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/gym_surface"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1AFFFFFF"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Icon Fire -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:tint="#F5A623"
                        android:background="@drawable/bg_logo_circle"
                        android:backgroundTint="#1AF5A623"
                        android:padding="6dp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvKcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="320"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kcal Burned"
                        android:textColor="@color/gym_text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>