<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Warna dasar Transparan (Wajib, biar background aslinya gak ketutup) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Layer 2: Titik Hijau Kecil -->
    <!-- Gravity top|center_horizontal: Taruh di tengah atas -->
    <!-- top="28dp": Turunin titiknya kebawah melewati icon (icon size 24dp + jarak 4dp) -->
    <item
        android:width="4dp"
        android:height="4dp"
        android:gravity="top|center_horizontal"
        android:top="37dp">

        <shape android:shape="oval">
            <solid android:color="@color/gym_primary" /> <!-- Warna Hijau Neon -->
        </shape>
    </item>

</layer-list>
