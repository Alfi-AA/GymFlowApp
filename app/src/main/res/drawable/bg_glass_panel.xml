<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 1. FILL: Radial Gradient (Cahaya memancar) -->
    <gradient
        android:type="radial"
        android:gradientRadius="60dp"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#cc1E1E1E"
        android:endColor="#26FFFFFF" />

    <!-- Penjelasan:
         - type="radial": Membuat lingkaran.
         - gradientRadius="60dp": Besar radius cahayanya (sesuaikan agar menutupi kotak).
         - centerX="0.5": Posisi horizontal tengah (0.0 kiri, 1.0 kanan).
         - centerY="0.3": Posisi vertikal agak ke atas dikit (0.0 atas, 1.0 bawah),
           biar kayak lampu sorot dari atas.
         - startColor: Putih transparan (Cahaya pusat).
         - endColor: Hitam transparan (Pinggiran gelap).
    -->

    <!-- 2. CORNERS: Sudut Membulat -->
    <corners android:radius="16dp" />

    <!-- 3. STROKE: Outline Terang Tipis (Pinggiran Kaca) -->
    <stroke
        android:width="1dp"
        android:color="#26FFFFFF" />

</shape>
