<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Background Kotak (Warna Input Background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gym_input_bg" /> <!-- Warna #2C2C2C -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Layer 2: Ikon Panah di Kanan -->
    <item
        android:drawable="@drawable/ic_arrow_down"
        android:gravity="center_vertical|end"
        android:end="16dp"
        android:width="24dp"
        android:height="24dp" />
    <!-- android:end="16dp" memberi jarak dari pinggir kanan -->

</layer-list>
